<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@drawable/background_view"
    android:padding="6dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginBottom="5dp">

    <ImageView
        android:id="@+id/backgroundList_icon"
        android:layout_width="40dp"
        android:layout_centerHorizontal="true"
        android:layout_height="40dp"
        android:src="@drawable/weather_icons" />

    <TextView
        android:id="@+id/backgroundList_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/backgroundList_daraje"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:text="Friday"
        android:textColor="@color/fontColor"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/backgroundList_daraje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/backgroundList_icon"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:text="12"
        android:textColor="@color/fontColor"
        android:textSize="18sp"
        android:textStyle="bold" />


</RelativeLayout>