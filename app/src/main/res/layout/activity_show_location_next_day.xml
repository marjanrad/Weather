<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="22dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpapera"
    tools:context=".ShowLocationNextDay">

    <TextView
        android:id="@+id/ShowLocation_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday"
        android:textColor="@color/fontColor"
        android:layout_alignBottom="@id/ShowLocation_image"

        android:textStyle="bold"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/ShowLocation_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ShowLocation_daraje"
        android:text="Ruiny"
        android:layout_marginTop="15dp"
        android:textColor="@color/fontColor"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/ShowLocation_daraje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textStyle="bold"
        android:layout_below="@id/ShowLocation_day"
        android:text="10 C"
        android:textColor="@color/fontColor"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/ShowLocation_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_below="@id/ShowLocation_weather"
        android:text="Tehran"
        android:textColor="@color/fontColor"
        android:textSize="25sp" />


    <ImageView
        android:id="@+id/ShowLocation_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/cloudy" />


</RelativeLayout>