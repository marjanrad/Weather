<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ShowLocation_Relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpapera"
    android:paddingLeft="22dp"
    tools:context=".ShowLocationNextDay">

    <TextView
        android:id="@+id/ShowLocation_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="Monday"
        android:textColor="@color/fontColor"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ShowLocation_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ShowLocation_daraje"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Ruiny"
        android:textColor="@color/fontColor"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/ShowLocation_daraje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ShowLocation_day"
        android:layout_marginTop="18dp"
        android:text="10 C"
        android:textColor="@color/fontColor"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ShowLocation_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ShowLocation_weather"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Tehran"
        android:textColor="@color/fontColor"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/ShowLocation_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ShowLocation_location"
        android:fontFamily="sans-serif-smallcaps"
        android:text="date"
        android:textColor="@color/fontColor"
        android:textSize="25sp" />


</RelativeLayout>